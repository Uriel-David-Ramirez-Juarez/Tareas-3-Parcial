                        echo ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
                        clear 0

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCrea el archivo file1.txt:\n"
                read R
                if [ "$R" = "touch file1.txt" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        echo -e "Quieres continuar?[Y-N]."
        read F
        case $F in
                Y)continue;;
                N)exit;;
        esac

                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCambia el timestamp del archivo file1.txt:\n"
                read R
                if [ "$R" = "touch file1.txt" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
