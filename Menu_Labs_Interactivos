LAB 1
#!/bin/bash

#LABORATORIO 1



                        echo ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
                        echo "LAB 1 - Comandos basicos para navegar en carpetas."
                read -p "Presiona [ENTER] para comenzar..." fackEnterkey
                        echo ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
                        clear 0

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nVerifica el Directorio Actual:\n"
                read R
                if [ "$R" = "pwd" ]; then
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        echo -e "Quieres continuar?[Y-N]."
        read F
        case $F in
                Y)continue;;
                N)exit;;
        esac
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCrea la carpeta \"dir1\":\n"
                read R
                if [ "$R" = "mkdir -v dir1" ]; then
                        echo -e "Comando correcto"
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0

                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCrea la carpeta \"dir2\":\n"
                read R
                if [ "$R" = "mkdir -v dir2" ]; then
                        echo -e "Comando correcto"
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0

                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCrea la carpeta dir3 dentro de dir2:\n"
                read R
                if [ "$R" = "mkdir -v dir2/dir3" ]; then
                        echo -e "Comando correcto"
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0

                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCrea la carpeta dir4 dentro de dir3\n"
                read R
                if [ "$R" = "mkdir -v dir2/dir3/dir4" ]; then
                        echo -e "Comando correcto"
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0

                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nLista el contenido del directorio actual\n"
                read R
                if [ "$R" = "ls" ]; then
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                                echo -e "Quieres continuar?[Y-N]."
        read F
        case $F in
                Y)continue;;
                N)exit;;
        esac
                        clear 0

                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nLista todos los archivos en la carpeta actual de forma recursiva\n"
                read R
                if [ "$R" = "ls -R" ]; then
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0

                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCambiate a la carpeta dir2\n"
                read R
                if [ "$R" = "cd dir2" ]; then
                        echo -e "Comando correcto"
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0

                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nRegresa a la carpeta anterior\n"
                read R
                if [ "$R" = "cd -" ]; then
                        echo -e "Comando correcto"
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0

                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCambia a la carpeta de inicio del usuario actual\n"
                read R
                if [ "$R" = "cd" ]; then
                        echo -e "Comando correcto"
                        echo "=========================================================================="
                        echo -e "\n\n"
                        echo "Haz completado el LAB 1 \"Buena esa crack\""
                        sleep 2
                        break
                fi

        done
