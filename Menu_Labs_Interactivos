        read F
        case $F in
                Y)continue;;
                N)exit;;
        esac

                        clear 0
                        break

                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nBusca la palabra hello en toda la carpeta actual:\n"
