                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nRedirige la salida del comando anterior hacia un archivo:\n"
                read R
                if [ "$R" = "echo hello > hello.txt" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nAdjunta el texto linux al archivo hello.txt:\n"
                read R
                if [ "$R" = "echo linux >> hello.txt" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        echo -e "Quieres continuar?[Y-N]."
        read F
        case $F in
                Y)continue;;
                N)exit;;
        esac

                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nAdjunta el texto world al archivo hello.txt:\n"
                read R
                if [ "$R" = "echo world >> hello.txt" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nDespliega en la pantalla el contenido del archivo hello.txt:\n"
