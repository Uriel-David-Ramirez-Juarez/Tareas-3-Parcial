#!/bin/bash

#LABORATORIO 4
                        echo ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
                        echo "LAB 4 - Comandos basicos para administrar procesos."
                read -p "Presiona [ENTER] para comenzar..." fackEnterkey
                        echo ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
                        clear 0


while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nEjecuta el comando ps y analiza su salida:\n"
                read R
                if [ "$R" = "ps" ]; then
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        echo -e "Quieres continuar?[Y-N]."
        read F
        case $F in
                Y)continue;;
                N)exit;;
        esac

                        clear 0
                        break

                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCrea un nuevo proceso:\n"
                read R
                if [ "$R" = "sleep 60 &" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nEjecuta ps y analiza su salida:\n"
                read R
                if [ "$R" = "ps" ]; then
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nMata el proceso creado en el paso 2 (remplaza 12345 por el ID del proceso):\n"
                read R
                if [ "$R" = "kill" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nVerifica con ps si el proceso sigue vivo:\n"
                read R
                if [ "$R" = "ps" ]; then
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nObliga al proceso a morir enviando la seÃ±al -9:\n"
                read R
                if [ "$R" = "kill -p" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
