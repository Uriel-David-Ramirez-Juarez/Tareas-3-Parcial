#!/bin/bash

#LABORATORIO 3
                        echo ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
                        echo "LAB 3 - Copiar, renombrar y borrar archivos."
                read -p "Presiona [ENTER] para comenzar..." fackEnterkey
                        echo ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
                        clear 0



while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nDespliega en pantalla el uso del disco de la carpeta actual:\n"
                read R
                if [ "$R" = "du" ]; then
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        echo -e "Quieres continuar?[Y-N]."
        read F
        case $F in
                Y)continue;;
                N)exit;;
        esac

                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nDespliega en pantalla el uso del disco de la carpeta actual en un formato legible:\n"
                read R
                if [ "$R" = "du -xh ~" ]; then
                        echo -e "Este comando podria tardar en carpetas de gran tamaÃ±o, asi que puedes optar por el parametro: --max-depth"
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCopia el archivo hello.txt a la carpeta dir2:\n"
                read R
                if [ "$R" = "cp -v hello.txt dir2" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCopia y renombra el archivo hello.txt a dir2/file2.txt:\n"
                read R
                if [ "$R" = "cp -v hello.txt dir2/file2.txt" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCopia todos los archivos con la extension .txt de la carpeta dir2 a la carpeta dir2/dir3:\n"
                read R
                if [ "$R" = "cp -vr dir2/*.txt dir2/dir3" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCopia la carpeta dir2/dir3 al directorio actual:\n"
                read R
                if [ "$R" = "cp -vr dir2/dir3 ." ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nMuestra el contenido de la carpeta actual:\n"
                read R
                if [ "$R" = "ls" ]; then
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nVerifica la integridad de los archivos copiado hello.txt:\n"
                read R
                if [ "$R" = "md5sum hello.txt" ]; then
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nMueve el archivo hello.txt a dir2/dir3/dir4/hi.txt:\n"
                read R
                if [ "$R" = "mv hello.txt dir2/dir3/dir4/hi.txt" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nMuestra el contenido de la carpeta dir4:\n"
                read R
                if [ "$R" = "ls" ]; then
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCrea la carpeta dir5:\n"
                read R
                if [ "$R" = "mkdir dir5" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        echo -e "Quieres continuar?[Y-N]."
        read F
        case $F in
                Y)continue;;
                N)exit;;
        esac

                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nMueve todos los archivos de texto de dir2 hacia dir5:\n"
                read R
                if [ "$R" = "mv dir2/*.txt dir5" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nRenombra la carpeta dir5 a dir50:\n"
                read R
                if [ "$R" = "mv dir5 dir50" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCrea un enlace llamado hello desde el directorio actual hacia dir2/dir3/dir4/hi.txt:\n"
                read R
                if [ "$R" = "ln dir2/dir3/dir4/hi.txt hello" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                  fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nVerifica el inode de cada archivo:\n"
                read R
                if [ "$R" = "stat dir2/dir3/dir4/hi.txt" ]; then
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nCrea un acceso directo llamado softlink desde el directorio actual hacia dir2/dir3/dir4/hi.txt:\n"
                read R
                if [ "$R" = "ln -s dir2/dir3/dir4/hi.txt softlink" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nElimina el archivo file2.txt de forma interactiva:\n"
                read R
                if [ "$R" = "rm -i file2.txt" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nElimina de forma interactiva y recursiva el contenido de dir5:\n"
                read R
                if [ "$R" = "rm -ir dir50/*" ]; then
                        echo -e "Comando correcto:"
                        $R
                        echo "=========================================================================="
                        echo -e "\n\n"
                        sleep 1
                        clear 0
                        break
                fi
        done

while [ $try 0 ];
