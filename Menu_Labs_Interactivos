while [ $try 0 ];
        do
                        echo "=========================================================================="
                echo -e "\nBusca la palabra linux en el archivo hello:\n"
                read R
                if [ "$R" = "grep linux hello" ]; then
                        echo -e "Comando correcto, Mostrando salida del comando:"
                        $R
                        echo "=========================================================================="
