#!/bin/bash

clear

vis(){
echo "=============================================================================================================="
echo "|                                          _______                                                           |"
echo "|                                 |\    /| |       |\     | |      |                                         |"
echo "|                                 | \  / | |       | \    | |      |                                         |"
echo "|                                 |  \/  | |_____  |  \   | |      |                                         |"
echo "|                                 |      | |       |   \  | |      |                                         |"
echo "|                                 |      | |       |    \ | |      |                                         |"
echo "|                                 |      | |______ |     \| |______|                                         |"
echo "|                                                                                                            |"
echo "|                __________ _______  _____                 ______  __________                  _______       |"
echo "|     | |\     |      |     |       |     |      /\       /      \      |     | \          /  /       \      |"
echo "|     | | \    |      |     |       |     |     /  \     |              |     |  \        /  |         |     |"
echo "|     | |  \   |      |     |_____  |  __/     /    \    |              |     |   \      /   |         |     |"
echo "|     | |   \  |      |     |       |   \     /______\   |              |     |    \    /    |         |     |"
echo "|     | |    \ |      |     |       |    \   /        \  |              |     |     \  /     |         |     |"
echo "|     | |     \|      |     |______ |     \ /          \  \______/      |     |      \/       \_______/      |"
echo "|                                                                                                            |"
echo "|                                                                                                            |"
echo "|                                                                                                            |"
echo "|                   A.-LAB1                    C.-LAB3                          E.-LAB5                      |"
echo "|                                                                                                            |"
echo "|                              B.-LAB2                         D.-LAB4                                       |"
echo "|                                                                                                   S.-Exit  |"
echo "=============================================================================================================="
}

while true
do
        vis
        echo "BIENVENIDO, Â¿Cual LAB quiere ejecutar?:"
        read n
        case $n in
                A)cd /home/ujuarez/LABS && ./LAB1.sh && sleep 1 && clear;;
                B)cd /home/ujuarez/LABS && ./LAB2.sh && sleep 1 && clear;;
                C)cd /home/ujuarez/LABS && ./LAB3.sh && sleep 1 && clear;;
                D)cd /home/ujuarez/LABS && ./LAB4.sh && sleep 1 && clear;;
                E)cd /home/ujuarez/LABS && ./LAB5.sh && sleep 1 && clear;;
                S)echo "Hasta la proxima crack" && sleep 2 && clear && exit 0;;
                *)echo "Opcion no encontrada, intente de nuevo:" && sleep 1 && clear;;

        esac
done
